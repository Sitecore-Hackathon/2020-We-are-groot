
@model  ScHackathon.Feature.Teams.Models.TeamListViewModel


@if (Model != null)
{
    <section id="Teams" class="about">
           <div class="container">
            <div class="row">
                <div class="span12">
                    <div class="stack-title">@Model.Title</div>
                    <p></p>
                </div>
                @foreach (var team in Model.TeamInfo)
                {
                    <div class="card border-primary mb-3" style="max-width: 20rem;">
                        <div class="card-header">@team.TeamName</div>
                        <div class="card-body">
                            @if (!string.IsNullOrEmpty(team.FirstParticipantName) || !string.IsNullOrEmpty(team.FirstParticipantTwitterUrl) || !string.IsNullOrEmpty(team.FirstParticipantLinkedInUrl))
                            {
                                <h4 class="card-title"> @team.FirstParticipantName</h4>
                                <p class="card-text">
                                    @if (!string.IsNullOrEmpty(team.FirstParticipantTwitterUrl))
                                    {
                                        <a href="@team.FirstParticipantTwitterUrl" target="_blank"><img style="display: inline;" alt="twitter" src="http://sitecorehackathon.org/wp-content/uploads/2014/09/twitter.png" width="18" height="14"></a>
                                    }
                                    @if (!string.IsNullOrEmpty(team.FirstParticipantLinkedInUrl))
                                    {
                                        <a href="@team.FirstParticipantLinkedInUrl" target="_blank"><img style="display: inline;" alt="linkedin" src="http://sitecorehackathon.org/wp-content/uploads/2014/09/linkedin.png" width="16" height="16"></a>
                                    }

                                </p>
                            }
                            @if (!string.IsNullOrEmpty(team.SecondParticipantName) || !string.IsNullOrEmpty(team.SecondParticipantTwitterUrl) || !string.IsNullOrEmpty(team.SecondParticipantLinkedInUrl))
                            {

                                <h4 class="card-title"> @team.SecondParticipantName</h4>
                                <p class="card-text">
                                    @if (!string.IsNullOrEmpty(team.SecondParticipantTwitterUrl))
                                    {
                                        <a href="@team.SecondParticipantTwitterUrl" target="_blank"><img style="display: inline;" alt="twitter" src="http://sitecorehackathon.org/wp-content/uploads/2014/09/twitter.png" width="18" height="14"></a>
                                    }
                                    @if (!string.IsNullOrEmpty(team.SecondParticipantLinkedInUrl))
                                    {
                                        <a href="@team.SecondParticipantLinkedInUrl" target="_blank"><img style="display: inline;" alt="linkedin" src="http://sitecorehackathon.org/wp-content/uploads/2014/09/linkedin.png" width="16" height="16"></a>
                                    }

                                </p>
                            }
                            @if (!string.IsNullOrEmpty(team.ThirdParticipantName) || !string.IsNullOrEmpty(team.ThirdParticipantTwitterUrl) || !string.IsNullOrEmpty(team.ThirdParticipantLinkedInUrl))
                            {
                                <h4 class="card-title"> @team.ThirdParticipantName</h4>
                                <p class="card-text">
                                    @if (!string.IsNullOrEmpty(team.ThirdParticipantTwitterUrl))
                                    {
                                        <a href="@team.ThirdParticipantTwitterUrl" target="_blank"><img style="display: inline;" alt="twitter" src="http://sitecorehackathon.org/wp-content/uploads/2014/09/twitter.png" width="18" height="14"></a>
                                    }
                                    @if (!string.IsNullOrEmpty(team.ThirdParticipantLinkedInUrl))
                                    {
                                        <a href="@team.ThirdParticipantLinkedInUrl" target="_blank"><img style="display: inline;" alt="linkedin" src="http://sitecorehackathon.org/wp-content/uploads/2014/09/linkedin.png" width="16" height="16"></a>
                                    }

                                </p>

                            }



                        </div>
                    </div>


                }
            </div>
        </div>
    </section>
}

